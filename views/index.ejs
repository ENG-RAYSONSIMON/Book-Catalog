<%- include("partials/header"); -%>

    <h1>Book Catalog</h1>
<!-- Adding items to the database -->
    <h3 class="my-3"><a href="/add">Add a New BookğŸ“</a></h3>
    <!-- reading item from mongodb -->
    <% books.forEach(function(book){ %>
  <ul>
    <li>
   <strong><%= book.title %> </strong><span>by <%= book.author %></span>
   <button class="btn btn-outline-primary">
   <a href="/edit/<%= book._id %>">Edit</a>
   </button>
   <form action="/delete/<%=book._id %>" method="post" style="display: inline;">
     <button class="btn btn-dark my-2">Delete</button>
    </form>
  </li>
</ul>
<% }) %>

